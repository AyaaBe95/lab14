    <div class="div-head"><h2 id="searchHead">Search by Title or Author</h2></div>
      <form action="/searches" method="POST" id="newForm">
        <input type="text" id="search" name="search" placeholder="Enter title or author"/>
        <br>
        <br>
        <fieldset>
          <label for="title">Title</label>
          <input type="radio" id="title" name="searchValue" value="title" />
        </fieldset>
        <br>
        <fieldset>
          <label for="author">Author</label>
          <input type="radio" id="author" name="searchValue" value="author" />
        </fieldset>
        <br>
        <input type="submit" value="Search the Google Books API" id="submitBtn"/>
      </form>
      <footer></footer>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</body>
